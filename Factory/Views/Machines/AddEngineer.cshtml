        @Html.HiddenFor(model => model.MachineId)

        @Html.Label("Select Engineer")
        @Html.DropDownList("EngineerId", (SelectList)ViewBag.EngineerId, "Select an Engineer")

        <input type="submit" value="Save" class="button" />
    }
    <br>
</div>