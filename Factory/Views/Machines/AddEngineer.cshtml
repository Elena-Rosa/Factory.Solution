@model Factory.Models.Machine
@using Factory.Models
@{
    <!-- ViewBag.Title = "AddEngineer"; -->
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="title">Add an Engineer</h2>

<div class="content_box">
    <h4 class="bold">Add a Engineer: @Html.DisplayFor(model => model.Name) @Html.DisplayFor(model
        =>
        model.Name)</h4>

    @using (Html.BeginForm())
