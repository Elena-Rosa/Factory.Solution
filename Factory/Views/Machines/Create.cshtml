@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<h4>Add a new machine</h4>


@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.MachineDescription)
  @Html.TextBoxFor(model => model.MachineDescription)

  @Html.LabelFor(model => model.Name)
  @Html.DropDownList("EngineerId", ViewBag.EngineerId as SelectList, "Select an engineer", new { @class = "form-control" })


  <input type="submit" value="Add new machine" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all machines", "Index")</p>