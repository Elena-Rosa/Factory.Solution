@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer
@using System.Collections.Generic;

<h1>Machine</h1>

@if (Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 
else
{
  <ul>
    @foreach(Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId }) | @machine.Engineer.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new machine", "Create")</p>