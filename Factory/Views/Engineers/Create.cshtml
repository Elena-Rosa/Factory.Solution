@{
    Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add Engineer</h4>

<hr />

@using (Html.BeginForm())
{
    @Html.Label("Name")
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })


    <br>
    @Html.Label("Machines")
    @Html.DropDownList("MachineId", ViewBag.MachineList as SelectList, string.Empty, new { @class = "form-control" })


   
    <input type="submit" value="Complete" class="btn btn-default" required="true" />
}

<p>@Html.ActionLink("back to employee directory", "Index")</p>